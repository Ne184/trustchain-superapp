<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
        android:text="View tokens"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTokenView"
        app:layout_constraintStart_toStartOf="@+id/buttonTokenCreate"
        app:layout_constraintEnd_toEndOf="@+id/buttonTokenCreate"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp" />

    <com.google.android.material.button.MaterialButton
        android:text="Create Token"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTokenCreate"
        app:layout_constraintBottom_toTopOf="@+id/buttonTokenView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="142dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="132dp"
        app:layout_constraintHorizontal_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
